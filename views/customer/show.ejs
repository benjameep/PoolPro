<main class="page lanidng-page">
  <a style="margin-left: 30px;" href="<%= `/dashboard` %>">Return</a>
  <br />
  <section style="background: #ffffff;">
    <div class="container" style="align-content: left;">
      <h1>
        <%= customer.custFName %> <%= customer.custLName %>
      </h1>
      <br />
      <div class="card-deck">
        <div class="card">
          <div class="card-header">
            <h4>Customer Information</h4>
          </div>
          <div class="card-body">
            <p><strong>Name:</strong> <%= customer.custFName %> <%= customer.custLName %></p>
            <p><strong>Email:</strong> <%= customer.email %></p>
            <p><strong>Phone:</strong> <%= customer.phone %></p>
            <p><strong>Address:</strong> <%= customer.address %></p>
            <p><strong>City:</strong> <%= customer.city %></p>
            <p><strong>State:</strong> <%= customer.state %></p>
            <p><strong>Zip Code:</strong> <%= customer.zipCode %></p>
            <div class="card-footer text-right">
              <a class="btn btn-amano" href="<%=`/customer/${customer._id}/edit`%>">
                Edit
              </a>
              <a class="btn btn-amano" href="<%= `/customer/${customer._id}/delete?_method=DELETE` %>"
                onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header">
            <h4>Recent Updates</h4>
          </div>
          <div class="card-body">
            <p>[DATE]: Placeholder Update...</p>
            <div class="card-footer text-right">
              <a class="btn btn-amano" href="">
                View All
              </a>
              <a class="btn btn-amano" href=""
                onclick="return confirm('Are you sure you want to delete this record?')">Add New</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>