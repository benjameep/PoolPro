        </li> -->
        <li class="nav-item">
          <a href="/customer/new" class="nav-link active">Add New Client</a>
        </li>
      </ul>
        <div class="container amano-form-container" style="margin-top:25px; margin-bottom:30px;">
            <div class="data-form">
                <form class="form-signin" method="POST" action="<%=`/customer/create` %>">
                  <h2>Add Client</h2>
                  <br />
                  <!-- <label for="inputFirstName" style="font-size:x-large;">First Name</label> -->
                  <input class="form-control" type="text" name="first" id="inputFirstName" placeholder="First Name" autofocus>
                  <!-- <label for="inputLastName" style="font-size:x-large;">Last Name</label> -->
                  <input class="form-control" type="text" name="last" id="inputLastName" placeholder="Last Name">
                  <!-- <label for="inputEmail" style="font-size:x-large;">Email address</label> -->
                  <input class="form-control" type="email" name="email" id="inputEmail" placeholder="Email Address" required>
                  <!-- <label for="inputPhone" style="font-size:x-large;">Phone Number</label> -->
                  <input class="form-control" type="tel" name="phone" id="inputPhone" placeholder="Phone Number (e.g. 202-555-0191)" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
                  <!-- <label for="inputAddress" style="font-size:x-large;">Address</label> -->
                  <input class="form-control" type="text" name="address" id="inputAddress" placeholder="Address" required>
                  <!-- <label for="inputCity" style="font-size:x-large;">City</label> -->
                  <input class="form-control" type="text" name="city" id="inputCity" placeholder="City" required>
                  <!-- <label for="inputState" style="font-size:x-large;">State</label> -->
                  <input class="form-control" type="text" name="state" id="inputState" placeholder="State" required>
                  <!-- <label for="inputZipCode" style="font-size:x-large;">Zip Code</label> -->
                  <input class="form-control" type="text" name="zipCode" id="inputZipCode" pattern="\d*" placeholder="Zip Code" required>
                  <input type="hidden" name="technician" value="<%= currentUser._id %>">
                  <br />
                  <div class="text-right">
                    <button class="btn btn-amano" type="submit">Add</button>
                  </div>
                </form>
              </div>
        </div>
    </section>
</main>