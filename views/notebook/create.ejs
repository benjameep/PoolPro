<main class="page lanidng-page">
    <section class="portfolio-block block-intro" style="background: white;">
        <div class="container amano-form-container">
            <div class="data-form">
                <form action="<%= `/notes/${id}/save` %>" method="POST">
                    <h2 class="form-signin-heading">New Note for <%= customer._custFName %></h2>
                    <br />
                    <input class="form-control" type="email" name="email" id="inputEmail" placeholder="Email address"
                        required><br />
                    <br />
                    <div class="text-right">
                        <button class="btn btn-amano" type="submit">Save</button>
                    </div>
                    <br />
                    <br />
                    <h6>Not a member yet? <a href="/account/register">Register</a></h6>
                </form>
            </div>
        </div>
    </section>
</main>