<main class="page lanidng-page">
    <section class="portfolio-block block-intro" style="background: #ffffff;">
        <div class="container">
            <div class="data-form">
                <form class="form-signin" method="POST" action="/help/send">
                  <h2>Help Me!</h2>
                  <label for="inputSubject" style="font-size:x-large;">Subject</label>
                  <input class="form-control" type="text" name="subject" id="inputStubject" placeholder="Subject" autofocus>
                  <label for="inputEmail" style="font-size:x-large;">Email address</label>
                  <input class="form-control" type="email" name="email" id="inputEmail" placeholder="Email Address" required>
                  <label for="inputMessage" style="font-size:x-large;">Message</label>
                  <textarea class="form-control" name="message" id="inputMessage" placeholder="Message" required></textarea>
                  <br/>
                  <button class="btn btn-lg btn-primary btn-block" type="submit">Get Help</button>
                </form>
              </div>
        </div>
    </section>
</main>