<main class="page lanidng-page">
    <section class="portfolio-block block-intro" style="background: #ffffff;">
        <div class="container">
            <div class="data-form">
                <form class="form-signin" method="POST" action="<%=`/dashboard/${customer._id}/add-pool` %>">
                  <h2>Add Pool for <%= customer.custFName %> <%= customer.custLName %> </h2>
                  <br />
                  <input class="form-control" type="number" name="gallons" id="inputGallons" placeholder="Gallons (e.g. 13500)" autofocus>
                  <input class="form-control" type="text" name="chemType" id="inputChemType" placeholder="Chemical Type (e.g. A)">
                  <input type="hidden" name="customer" value="<%= customer._id %>">
                  <br />
                  <button class="btn btn-lg btn-primary btn-block btn-amano" type="submit">Add</button>
                </form>
              </div>
        </div>
    </section>
</main>